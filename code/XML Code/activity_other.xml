<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otherActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/otherTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/ewing_houses"
                android:textColor="@color/colorAccent"
                android:textSize="50sp"
                app:layout_constraintBottom_toTopOf="@+id/brandonAve"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/brandonAve"
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/otherTextView"
                app:srcCompat="@drawable/brandon_ave" />


            <Button
                android:id="@+id/button_more_info_brandonAve"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="400dp"
                android:layout_marginLeft="400dp"
                android:gravity="center"
                android:text="@string/More_info_BrandonAve"
                app:layout_constraintStart_toStartOf="@+id/brandonAve"
                app:layout_constraintTop_toBottomOf="@+id/brandonAve" />

            <Button
                android:id="@+id/contact_brandonAve"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="670dp"
                android:layout_marginLeft="670dp"
                android:layout_marginTop="-55dp"
                android:gravity="center"
                android:text="@string/contact_info_BrandonAve"
                app:layout_constraintStart_toStartOf="@+id/brandonAve"
                app:layout_constraintTop_toBottomOf="@+id/brandonAve" />


            <TextView
                android:id="@+id/textfile1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="Text"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/contact_brandonAve"
                tools:ignore="HardcodedText,MissingConstraints"
                tools:layout_editor_absoluteX="30dp" />


            <ImageView
                android:id="@+id/GreenLn"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textfile1"
                app:srcCompat="@drawable/greenlnimg" />


            <Button
                android:id="@+id/button_more_info_GreenLn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="400dp"
                android:layout_marginLeft="400dp"
                android:gravity="center"
                android:text="@string/More_info_BrandonAve"
                app:layout_constraintStart_toStartOf="@+id/GreenLn"
                app:layout_constraintTop_toBottomOf="@+id/GreenLn" />

            <Button
                android:id="@+id/contact_GreenLn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="670dp"
                android:layout_marginLeft="670dp"
                android:layout_marginTop="-55dp"
                android:gravity="center"
                android:text="@string/contact_info_BrandonAve"
                app:layout_constraintStart_toStartOf="@+id/GreenLn"
                app:layout_constraintTop_toBottomOf="@+id/GreenLn" />

            <TextView
                android:id="@+id/textfile_4"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="Text"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/contact_GreenLn"
                tools:ignore="HardcodedText,MissingConstraints"
                tools:layout_editor_absoluteX="8dp" />


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>